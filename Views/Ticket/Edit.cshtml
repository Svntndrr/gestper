@model Gestper.Models.Ticket

@{
    Layout = null;
    ViewData["Title"] = "Editar Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Editar Ticket</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <div class="sidebar">
        <img src="~/images/logo.png" alt="Logo Gestper" />
        <a href="/CRUD/Perfil">Perfil</a>
        <a asp-controller="Ticket" asp-action="Create">Creacion de Ticket</a>
        <a asp-controller="CRUD" asp-action="TicketsCreados">Lista de mis Tickets</a>
    </div>

    <div class="main">
        <div class="titulo-barra">
            <h2>Editar Ticket</h2>
        </div>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdTicket" />

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdCategoria">Categor√≠a</label>
                <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.Categorias"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdDepartamento">Departamento</label>
                <select asp-for="IdDepartamento" class="form-control" asp-items="ViewBag.Departamentos"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdPrioridad">Prioridad</label>
                <select asp-for="IdPrioridad" class="form-control" asp-items="ViewBag.Prioridades"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdEstado">Estado</label>
                <select asp-for="IdEstado" class="form-control" asp-items="ViewBag.Estados"></select>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-guardar">Guardar Cambios</button>
                <a asp-action="Lista" class="btn btn-cancelar">Cancelar</a>
            </div>
        </form>
    </div>

    <style>
        .sidebar {
            width: 250px;
            background-color: #007BFF;
            color: white;
            height: 100vh;
            padding-top: 20px;
            position: fixed;
            text-align: center;
        }

        .sidebar img {
            display: block;
            margin: 0 auto 30px;
            max-width: 150px;
            height: auto;
        }

        .sidebar a {
            display: block;
            color: white;
            padding: 12px 20px;
            text-decoration: none;
            font-size: 18px;
        }

        .sidebar a:hover {
            background-color: #0056b3;
        }

        .main {
            margin-left: 250px;
            padding: 30px 40px;
            background-color: #f0f8ff;
            min-height: 100vh;
        }

        .titulo-barra h2 {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-buttons {
            margin-top: 30px;
        }

        .btn {
            padding: 12px 24px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            margin-right: 10px;
            color: white;
            cursor: pointer;
        }

        .btn-guardar {
            background-color: #28a745;
        }

        .btn-cancelar {
            background-color: #6c757d;
        }

        .text-danger {
            color: #dc3545;
            font-size: 14px;
        }

    </style>
</body>
</html>
