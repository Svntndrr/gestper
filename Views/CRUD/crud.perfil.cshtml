@model Gestper.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Mi Perfil</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: #007BFF;
            color: white;
            height: 100vh;
            padding-top: 20px;
            position: fixed;
            text-align: center;
        }

        .sidebar img {
            display: block;
            margin: 0 auto 30px;
            max-width: 150px;
            height: auto;
        }

        .sidebar a {
            display: block;
            color: white;
            padding: 12px 20px;
            text-decoration: none;
            transition: background-color 0.2s ease;
        }

        .sidebar a:hover {
            background-color: #0056b3;
        }

        .sidebar a.active {
            background-color: #0056b3;
            font-weight: bold;
        }


        .main {
            margin-left: 220px;
            padding: 20px;
            flex-grow: 1;
            background-color: #f0f8ff;
            height: 100vh;
            overflow-y: auto;
        }

        .navbar {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 10px;
            background-color: transparent;
        }

        .card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            padding: 25px 40px;
            max-width: 900px;
            margin: auto;
        }

        .card-header {
            background-color: #007BFF;
            color: white;
            padding: 15px;
            border-radius: 6px 6px 0 0;
            font-size: 1.3rem;
        }

        .card-body h5 {
            margin-bottom: 5px;
            color: #007BFF;
        }

        .dato-perfil {
            font-size: 20px;
            font-weight: bold;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 4px;
            border: none;
            text-decoration: none;
            font-weight: bold;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007BFF;
            color: white;
        }

        .logout-button {
            background-color: #dc3545;
            border: none;
            color: white;
            padding: 8px 15px;
            border-radius: 4px;
            cursor: pointer;
        }

        .logout-button:hover {
            background-color: #c82333;
        }

        .text-center {
            text-align: center;
        }

        .badge {
            padding: 5px 10px;
            border-radius: 12px;
            font-size: 0.9em;
        }

        .bg-success {
            background-color: #28a745;
            color: white;
        }

        .bg-danger {
            background-color: #dc3545;
            color: white;
        }

        .row {
            display: flex;
            justify-content: space-between;
        }

        .col-md-6 {
            width: 48%;
        }
    </style>
</head>
<body>
<div class="sidebar">
    <img src="~/images/logo.png" alt="Logo Gestper" />
    <a href="/CRUD/Perfil">Perfil</a>
    <a asp-controller="Ticket" asp-action="Create">Creacion de Ticket</a>
    <a asp-controller="CRUD" asp-action="TicketsCreados">Lista de mis Tickets</a>
</div>


    <div class="main">
        <div class="navbar">
            <form method="post" asp-controller="Usuario" asp-action="CerrarSesion">
                <button type="submit" class="logout-button">Cerrar sesión</button>
            </form>
        </div>

        <h2 class="text-center fw-bold mb-4" style="font-size: 2.2rem; color: #343a40;">
            <i class="bi bi-person-badge"></i> Mi Perfil
        </h2>

        @if (TempData["MensajeExito"] != null)
        {
            <div class="alert alert-success text-center fw-semibold">
                @TempData["MensajeExito"]
            </div>
        }

        <div class="card" id="vistaPerfil">
            <div class="card-header">
                Información Personal
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <img src="~/images/profile-placeholder.png" alt="Foto de perfil" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                    <h3 class="mt-3">@Model.Nombre @Model.Apellido</h3>
                    <p>
                        @if (Model.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </p>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <h5>Nombre</h5>
                        <p class="dato-perfil">@Model.Nombre</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h5>Apellido</h5>
                        <p class="dato-perfil">@Model.Apellido</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <h5>Correo Electrónico</h5>
                        <p class="dato-perfil">@Model.Correo</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h5>Teléfono</h5>
                        <p class="dato-perfil">@Model.Telefono</p>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button onclick="mostrarEditar()" class="btn btn-primary">Editar Perfil</button>
                </div>
            </div>
        </div>

        <div id="editarPerfil" style="display:none;">
            @await Html.PartialAsync("~/Views/Perfil/Editar.cshtml", Model)
        </div>
    </div>

    <script>
        function mostrarEditar() {
            document.getElementById('vistaPerfil').style.display = 'none';
            document.getElementById('editarPerfil').style.display = 'block';
        }
    </script>
</body>
</html>
