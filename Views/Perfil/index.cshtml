@model Gestper.Models.Usuario
@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            @* Mensaje de éxito si existe *@
            @if (TempData["MensajeExito"] != null)
            {
                <div class="alert alert-success text-center fw-semibold">
                    @TempData["MensajeExito"]
                </div>
            }

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h2 class="mb-0">Mi Perfil</h2>
                </div>
                <div class="card-body px-4 py-5">
                    <div class="text-center mb-4">
                        <img src="~/images/tu-foto-real.png" alt="Foto de perfil" class="rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;" />
                        <h3 class="mt-3">@Model.Nombre @Model.Apellido</h3>
                        <p>
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-person"></i> Nombre</h6>
                            <p>@Model.Nombre</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-person-fill"></i> Apellido</h6>
                            <p>@Model.Apellido</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-envelope"></i> Correo</h6>
                            <p>@Model.Correo</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-phone"></i> Teléfono</h6>
                            <p>@Model.Telefono</p>
                        </div>
                    </div>

                    <div class="text-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-house"></i> Volver al Inicio
                        </a>
                        <a class="btn btn-primary" href="/Perfil/Editar">
                            <i class="bi bi-pencil-square"></i> Editar Perfil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

